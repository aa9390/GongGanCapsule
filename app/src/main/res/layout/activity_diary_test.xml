<?xml version="1.0" encoding="UTF-8"?>
    <RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:alpha="0.7"
    android:background="#ffffff">

    <TextView
        android:id="@+id/distance"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/showPictureIv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:textSize="23dp"
        android:text="거리"
        android:textColor="#000000" />

    <ImageView
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_capsule"
        android:id="@+id/showPictureIv"/>

    <TextView
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/showDateTv"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/showPictureIv"
        android:text="2018/05/25"/>

    <TextView
        android:layout_height="180dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/showContentTv"
        android:textColor="#000000"
        android:layout_below="@+id/showDateTv"
        android:text="공간캡슐 프로젝트"/>

</RelativeLayout>